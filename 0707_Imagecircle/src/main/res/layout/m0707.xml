<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:padding="20dp">

    <TextView
        android:id="@+id/m0707_t001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/m0707_t001"
        android:textAlignment="center"
        android:textColor="@color/Blue"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="12dp"
        android:text="@string/myname"
        android:textColor="@color/Yellow"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck" />

    <tw.tcnr10.m0707.CircleImgView
        android:id="@+id/m0707_ImgView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/m0707_t001"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/img06th" />

    <tw.tcnr10.m0707.CircleImgbutton
        android:id="@+id/m0707_Imgbutton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/m0707_t001"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/m0707_ImgView"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/img02th"
        tools:ignore="SpeakableTextPresentCheck" />
</RelativeLayout>